#!/bin/bash
# postinst script for cl-vrf
#
# see: dh_installdeb(1)

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

set -e

DIVERT_DIR=/usr/share/cumulus-vrf

# Install alternatives to ping and traceroute
for c in /usr/bin/traceroute /usr/sbin/traceroute /usr/bin/traceroute6 /bin/ping /bin/ping6
do
	d=$(dirname $c)
	f=$(basename $c)
	mkdir -p ${DIVERT_DIR}/${d}
	dpkg-divert --divert ${DIVERT_DIR}/${c} --rename ${c}
	ln -s /usr/lib/cumulus/${f}.cl ${c}
done

# We set PS1 in our profile.d script; remove the overrides by the
# bash package
for f in /etc/skel/.bashrc /etc/bash.bashrc
do
	d=$(dirname $f)
	mkdir -p ${DIVERT_DIR}/${d}

	dpkg-divert --divert ${DIVERT_DIR}/${f} --rename ${f}
	sed -e 's/^PS1=/#PS1=/' ${DIVERT_DIR}/${f} > ${f}
	cat >> ${f} <<EOF
VRF=\$(/usr/cumulus/bin/cl-vrf identify prompt)
export VRF
PS1='\${debian_chroot:+(\$debian_chroot)}\u@\h\${VRF}:\w\$ '
EOF
done

# Configure libpam_script
# - we only care about the use of pam_script_ses_open and that it looks for
#   and runs commands in /usr/share/libpam-script/pam-script.d/
# - config others to avoid syslog errors on login; this could/should go
#   elsewhere

VRF_PAM_SCRIPT=/usr/share/cumulus-vrf/libpam-script
PAM_SCRIPT=/usr/share/libpam-script

for f in pam_script_acct pam_script_auth pam_script_ses_open pam_script_ses_close
do
	g=${PAM_SCRIPT}/${f}
	if [ ! -e $g ]; then
		ln -s ${VRF_PAM_SCRIPT}/pam_script $g
	fi
done

ln -s ${VRF_PAM_SCRIPT}/vrf_pam ${PAM_SCRIPT}/pam-script.d/vrf_pam_ses_open

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
