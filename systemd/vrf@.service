[Unit]
Description=systemd for VRF %I
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/
ExecStart=/usr/lib/cumulus/systemd-vrf %I
ExecStartPost=/usr/lib/cumulus/systemd-vrf %I start-services
ExecStop=/usr/lib/cumulus/systemd-vrf %I stop
Restart=always

[Install]
WantedBy=basic.target
